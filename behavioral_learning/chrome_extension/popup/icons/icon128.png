<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 128 128">
  <!-- Background circle with gradient -->
  <defs>
    <linearGradient id="clockGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#42A5F5"/>
      <stop offset="100%" stop-color="#1565C0"/>
    </linearGradient>
  </defs>
  
  <!-- Background circle -->
  <circle cx="64" cy="64" r="60" fill="url(#clockGradient)" stroke="#0D47A1" stroke-width="2"/>
  
  <!-- Clock face -->
  <circle cx="64" cy="64" r="50" fill="#FFFFFF" stroke="#1565C0" stroke-width="1.5"/>
  
  <!-- Hour marks -->
  <line x1="64" y1="20" x2="64" y2="25" stroke="#333333" stroke-width="3"/>
  <line x1="64" y1="103" x2="64" y2="108" stroke="#333333" stroke-width="3"/>
  <line x1="20" y1="64" x2="25" y2="64" stroke="#333333" stroke-width="3"/>
  <line x1="103" y1="64" x2="108" y2="64" stroke="#333333" stroke-width="3"/>
  
  <!-- Diagonal hour marks -->
  <line x1="32" y1="32" x2="36" y2="36" stroke="#333333" stroke-width="2.5"/>
  <line x1="32" y1="96" x2="36" y2="92" stroke="#333333" stroke-width="2.5"/>
  <line x1="96" y1="32" x2="92" y2="36" stroke="#333333" stroke-width="2.5"/>
  <line x1="96" y1="96" x2="92" y2="92" stroke="#333333" stroke-width="2.5"/>
  
  <!-- Minute marks (quarters) -->
  <line x1="44" y1="22" x2="46" y2="27" stroke="#555555" stroke-width="2"/>
  <line x1="22" y1="44" x2="27" y2="46" stroke="#555555" stroke-width="2"/>
  <line x1="22" y1="84" x2="27" y2="82" stroke="#555555" stroke-width="2"/>
  <line x1="44" y1="106" x2="46" y2="101" stroke="#555555" stroke-width="2"/>
  <line x1="84" y1="106" x2="82" y2="101" stroke="#555555" stroke-width="2"/>
  <line x1="106" y1="84" x2="101" y2="82" stroke="#555555" stroke-width="2"/>
  <line x1="106" y1="44" x2="101" y2="46" stroke="#555555" stroke-width="2"/>
  <line x1="84" y1="22" x2="82" y2="27" stroke="#555555" stroke-width="2"/>
  
  <!-- Clock hands -->
  <line x1="64" y1="64" x2="64" y2="30" stroke="#1565C0" stroke-width="4" stroke-linecap="round"/>
  <line x1="64" y1="64" x2="88" y2="78" stroke="#D32F2F" stroke-width="3" stroke-linecap="round"/>
  
  <!-- Center dot -->
  <circle cx="64" cy="64" r="4" fill="#1565C0"/>
  
  <!-- Check mark to indicate automatic -->
  <path d="M98,38 L86,50 L78,42 L74,46 L86,58 L102,42 Z" fill="#4CAF50" stroke="#388E3C" stroke-width="1"/>
  
  <!-- Shadow effect for depth -->
  <circle cx="64" cy="67" r="52" fill="none" stroke="rgba(0,0,0,0.1)" stroke-width="4"/>
</svg>